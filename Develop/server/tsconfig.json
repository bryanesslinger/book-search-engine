{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    /* Modules */
    "module": "NodeNext",  // Required for ES Modules
    "moduleResolution": "NodeNext", // Properly resolve .js imports
    "target": "ES2022",
    "allowJs": true,
    "rootDir": "src",  // Root folder of source files

    /* Emit */
    "outDir": "dist",  // Output folder for compiled files
    "esModuleInterop": true, // Ensures compatibility with CommonJS modules
    "resolveJsonModule": true
  },
  "include": ["src"],
  "typeRoots": ["./node_modules/@types", "./src/types"]
}